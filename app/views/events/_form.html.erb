<%= form_with model: @event do |form| %>
    <% @event.errors.full_messages.each do |error| %>
        <div>
            <%= error %>
        </div>
    <% end %>

    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>

    <div>
        <%= form.label :date_time, "Fecha del evento" %>
        <%= form.datetime_field :date_time%>
    </div>

    <div>
        <%= form.label :location %>
        <%= form.text_field :location %>
    </div>

    <div>
        <%= form.label :visibility, "Privado" %>
        <%= form.check_box :visibility %>
    </div>

    <%= form.submit %>
<% end %>