<h1>Este es el show</h1>

<div class="flex flex-wrap">
  <div class="my-3 bg-amber-100 w-1/3">
    <h2><%= @event.name %></h2>
    <p><%= @event.description %></p>
    <p><%= @event.date_time.strftime("%B %d, %Y %H:%M") %></p>
    <p><%= @event.location %></p>
    <p><strong><%= @event.visibility ? "Visible" : "Oculto" %></strong></p>
    <%= link_to 'Editar Evento', edit_event_path(@event) %>
    <%= link_to 'Borrar Evento', event_path(@event), data: {
      turbo_method: :delete
    } %>
  </div>
</div>