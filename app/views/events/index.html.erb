<h1>Index de eventos</h1>

<div class="flex flex-wrap">
<% @events.each do |event| %>
  <div class="my-3 bg-slate-500 w-1/3">
    <h2><%= event.name %></h2>
    <p><%= event.description %></p>
    <p><%= event.date_time.strftime("%B %d, %Y %H:%M") %></p>
    <p><%= event.location %></p>
    <p><strong><%= event.visibility ? "Visible" : "Oculto" %></strong></p>
    <%= link_to 'Ver Evento', event_path(event) %>
    <%= link_to 'Editar Evento', edit_event_path(event) %>
  </div>
<% end %>
</div>
